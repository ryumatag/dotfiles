#!/usr/bin/env python3
import sys
import urllib.parse

def main():
    # Read entire stdin and strip a single trailing newline.
    # This matches common CLI behavior (like echo-piping utilities) while still
    # allowing multi-line input when needed.
    text = sys.stdin.read().rstrip("\n")

    # Use safe='~' to prevent '~' from being percent-encoded.
    # According to RFC 3986, '~' is an unreserved character and can remain
    # unescaped without affecting URL semantics.
    encoded = urllib.parse.quote(text, safe="~")

    print(encoded, end="")

if __name__ == "__main__":
    main()
