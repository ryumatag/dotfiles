[user]
  name = Ryuma Taguchi
  email = ryumatag@gmail.com

[core]
  editor = nvim
  pager = gitdiffer
  ignorecase = false

[interactive]
  diffFilter = gitdiffer --interactive

[color]
  ui = auto

[init]
  defaultBranch = main

[merge]
  ff = false
  conflictStyle = zdiff3

[pull]
  ff = only

[push]
  default = simple

[diff]
  colorMoved = default

[alias]
  st = status
  co = checkout
  amend = commit --amend -C HEAD
  logo = log --oneline
  logp = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  sync = !git checkout main && git pull origin main && git fetch -p origin && git branch -d $(git branch --merged | grep -v main | grep -v '*')

[include]
  path = config.local
